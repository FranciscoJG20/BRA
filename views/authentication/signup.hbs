<section class="row">
  <h4>Sign Up:</h4>

  {{#if message}}
  <p class="alert">{{message}}</p>
  {{/if}}

  <form method="POST" action="/user/signup" class="auth-form">
    <p class="input-field">
      <input type="email" name="email" placeholder="Email">
    </p>
    <p class="input-field">
      <input type="password" name="password" placeholder="Password">
    </p>
    <p class="input-field">
      <input type="submit" value="Sign Up">
    </p>
    <h2> COMING SOON</h2>
  </form>
</section>